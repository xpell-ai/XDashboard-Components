{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",

    "stripInternal": false,
    "skipLibCheck": true,

    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/dist", "**/.vite", "**/.cache"]
}
