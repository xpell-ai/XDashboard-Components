{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noEmit": true,

    "types": []
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/dist", "**/.vite", "**/.turbo", "**/.cache"]
}
